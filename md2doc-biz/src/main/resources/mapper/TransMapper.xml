<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abc.biz.mapper.TransMapper">

    <resultMap type="Trans" id="TransResult">
            <result property="transId"    column="trans_id"    />
            <result property="userId"    column="user_id"    />
            <result property="preContent"    column="pre_content"    />
            <result property="transContent"    column="trans_content"    />
            <result property="createTime"    column="create_time"    />
            <result property="updateTime"    column="update_time"    />
            <result property="status"    column="status"    />
            <result property="ver"    column="ver"    />
    </resultMap>

    <sql id="selectTransVo">
        select trans_id, user_id, pre_content, trans_content, create_time from tb_trans
    </sql>

    <select id="selectTransList" resultMap="TransResult">
        <include refid="selectTransVo" />
        <where>
            <if test="userId != null">user_id = #{userId}</if>
        </where>
    </select>


</mapper>
